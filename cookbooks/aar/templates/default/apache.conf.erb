<VirtualHost *:80>
  ServerName /
  WSGIDaemonProcess /AAR user=<%= @user %> group=<%= @group %> threads=5
  WSGIProcessGroup /AAR
  WSGIScriptAlias / <%= @install_path %>/awesomeapp.wsgi


  <Directory <%= @install_path %>>
    WSGIApplicationGroup %{GLOBAL}
    WSGIScriptReloading On
    Order deny,allow
    Allow from all
  </Directory>

  CustomLog ${APACHE_LOG_DIR}/access.log combined
  ServerAdmin <%= @server_admin_email %>
</VirtualHost>